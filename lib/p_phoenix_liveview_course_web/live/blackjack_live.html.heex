<section>
  <div class="text-center mb-4">
    <span class="bg-yellow-100 text-yellow-800 text-sm font-medium px-2.5 py-0.5 rounded">
      Target Score: {@win_limit} ğŸ¯
    </span>
  </div>

  <h3 class="text-xl">Deck</h3>
  <div class="flex flex-row justify-center gap-2 my-2">
    <%= for card <- @cards do %>
      <span class="bg-neutral-950 text-white text-lg rounded-sm  px-4 py-2 inline-flex items-center justify-center">
        {card}
      </span>
    <% end %>
  </div>

  <h3 class="text-xl">CPU</h3>
  <div class="flex flex-row justify-center gap-2 my-2">
    <span class="bg-red-600 text-white text-lg rounded-sm  px-4 py-2 inline-flex items-center justify-center">
      {@cpu |> Enum.at(-1)}
    </span>
    <%= for card <- Enum.take(@cpu, length(@cpu) - 1) do %>
      <span class="bg-red-600 text-white text-lg rounded-sm  px-4 py-2 inline-flex items-center justify-center">
        {if @winner != nil, do: card, else: "?"}
      </span>
    <% end %>
  </div>

  <h3 class="text-xl">PLAYER</h3>
  <div class="flex flex-row justify-center gap-2 my-2">
    <%= for card <- @player do %>
      <span class="bg-blue-600 text-white text-lg rounded-sm  px-4 py-2 inline-flex items-center justify-center">
        {card}
      </span>
    <% end %>
  </div>

  <h2 class="text-2xl mt-4 text-center font-bold">
    {case @winner do
      :player -> "Player wins ğŸ†!"
      :cpu -> "CPU wins ğŸ†!"
      :tie -> "It's a tie ğŸ¤·!"
      nil -> "Game in progress... â³"
    end}
  </h2>

  <footer class="flex flex-row justify-center gap-2 mt-8">
    <%= if @winner == nil do %>
      <button
        class="shadow-lg bg-gray-500 hover:bg-gray-600 text-white text-lg rounded-md px-4 py-2"
        type="button"
        phx-click="draw"
        phx-value-count="1"
      >
        Draw
      </button>
      <button
        class="shadow-lg bg-gray-800 hover:bg-gray-900 text-white text-lg rounded-md px-4 py-2"
        type="button"
        phx-click="stand"
      >
        Stand
      </button>
    <% else %>
      <button
        class="shadow-lg bg-green-600 hover:bg-green-700 text-white text-lg rounded-md px-6 py-2 font-bold animate-pulse"
        type="button"
        phx-click="reset"
      >
        ğŸ”„ Play Again
      </button>
    <% end %>

    </footer>
</section>
